<div class="container">
    <%= form_with model: @todo do |form| %>
    <%= form.label :title %><br>
    <%= form.text_field :title, required: true %><br>
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "60x10" %><br>
    <% unless @todo.id.nil? %>
        <%= form.label :status %><br>
        <%= form.select :status, Todo.statuses.keys %>
    <% end %>
    <%= form.submit %>
    <% end %>
</div>

